<!--
    In order to bundle a single executable, we need to add
    '.css' files and icons as gio::Resources and compile them.

    Leaving this here for future reference.
    https://gtk-rs.org/gtk4-rs/stable/latest/book/composite_templates.html#resources
-->

<?xml version="1.0" encoding="UTF-8" ?>
<gresources>
  <gresource prefix="/github/uiriansan/fiapo">
    <file compressed="true">styles/main.css</file>
    <file compressed="true">styles/vars.css</file>
    <file compressed="true">styles/home.css</file>
    <file compressed="true">styles/reader.css</file>
    <file compressed="true">styles/settings.css</file>
    <file>images/cover_image_404.png</file>
  </gresource>
</gresources>
